{
  "name": "@kitiumai/test-core",
  "version": "2.0.0",
  "description": "Core test utilities for enterprise testing - async helpers, builders, fixtures, mocks, and more",
  "type": "module",
  "sideEffects": false,
  "main": "dist/cjs/public.cjs",
  "module": "dist/esm/public.js",
  "types": "dist/types/public.d.ts",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kitium-ai/test-core.git"
  },
  "homepage": "https://github.com/kitium-ai/test-core#readme",
  "bugs": {
    "url": "https://github.com/kitium-ai/test-core/issues"
  },
  "exports": {
    ".": {
      "import": "./dist/esm/public.js",
      "require": "./dist/cjs/public.cjs",
      "types": "./dist/types/public.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist/cjs/**/*.cjs",
    "dist/esm/**/*.js",
    "dist/types/**/*.d.ts",
    "dist/types/**/*.d.ts.map",
    "!dist/**/__tests__/**",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "keywords": [
    "testing",
    "test-utilities",
    "test-helpers",
    "test-core",
    "unit-testing",
    "integration-testing",
    "test-framework",
    "jest",
    "vitest",
    "mocha",
    "async-testing",
    "test-builders",
    "test-fixtures",
    "test-mocks",
    "mock-data",
    "test-data",
    "factory-pattern",
    "builder-pattern",
    "test-doubles",
    "spy",
    "stub",
    "mock",
    "fake",
    "http-mocking",
    "api-testing",
    "test-logger",
    "test-timers",
    "async-helpers",
    "deferred",
    "retry",
    "timeout",
    "typescript",
    "typescript-testing",
    "enterprise",
    "production-ready",
    "tree-shakable",
    "esm",
    "commonjs",
    "kitium",
    "kitiumai"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json && node ./scripts/rename-cjs.mjs",
    "build:clean": "npm run clean && npm run build",
    "watch": "tsc --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc -b --noEmit",
    "type-check": "tsc -b --noEmit",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "format:check": "prettier --check .",
    "changeset": "ensure-changeset && changeset",
    "version": "changeset version",
    "publish:set-token": "set-npm-token",
    "publish:setup": "set-npm-token",
    "publish:check": "npm whoami --registry https://registry.npmjs.org || npm login --registry https://registry.npmjs.org",
    "publish:login": "npm login --registry https://registry.npmjs.org",
    "publish:package": "pnpm run publish:check && pnpm publish --access public --no-git-checks --registry https://registry.npmjs.org",
    "publish:package:token": "pnpm run publish:setup && pnpm publish --access public --no-git-checks --registry https://registry.npmjs.org",
    "publish:package:otp": "pnpm run publish:check && pnpm publish --access public --no-git-checks --registry https://registry.npmjs.org --otp",
    "publish:dry-run": "pnpm publish --access public --no-git-checks --dry-run --registry https://registry.npmjs.org",
    "publish:dry-run:token": "pnpm run publish:setup && pnpm publish --access public --no-git-checks --dry-run --registry https://registry.npmjs.org",
    "prepublishOnly": "npm run verify",
    "verify": "npm run lint && npm run test && npm run build",
    "release": "pnpm version && pnpm install --lockfile-only"
  },
  "dependencies": {
    "@kitiumai/logger": "^2.0.0"
  },
  "peerDependencies": {
    "typescript": "^5.6.0"
  },
  "devDependencies": {
    "@kitiumai/config": "^2.0.0",
    "@kitiumai/lint": "^2.0.0",
    "@kitiumai/scripts": "^1.0.0",
    "@eslint/eslintrc": "^3.1.0",
    "@changesets/cli": "^2.27.1",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.10.1",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.4.5",
    "typescript": "^5.6.0"
  },
  "pnpm": {
    "overrides": {
      "glob": "^10.3.10",
      "inflight": "npm:@jsdevtools/inflight@^1.0.6",
      "lodash.get": "npm:lodash@^4.17.21",
      "read-pkg-up": "^11.0.0",
      "semver-diff": "^5.0.0"
    }
  }
}
